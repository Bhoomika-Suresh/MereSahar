<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>MereSahar - Admin Dashboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/css/admin.css" />
  <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
  <link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster/dist/MarkerCluster.css" />
  <link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster/dist/MarkerCluster.Default.css" />
  <style>
    #map { height: 90vh; width: 100%; margin-top: 10px; }
    .popup-content { max-width: 300px; }
    .popup-content img { max-width: 120px; margin: 4px; border-radius: 6px; display: inline-block; }
    .popup-content form { display: flex; flex-direction: column; gap: 6px; margin-top: 10px; }
    .popup-content select, .popup-content input, .popup-content button {
      padding: 6px; font-size: 14px;
    }
    .popup-content button { cursor: pointer; background: #333; color: #fff; border: none; border-radius: 4px; }
  </style>
</head>
<body>
  <header>
    <h1>üõ†Ô∏è Admin Dashboard - Manage Issues</h1>
  </header>

  <div id="map"></div>

  <!-- Leaflet + Clustering -->
  <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
  <script src="https://unpkg.com/leaflet.markercluster/dist/leaflet.markercluster.js"></script>

  <script>
    const issues = JSON.parse('<%- JSON.stringify(issues || []) %>');

    // Init map
    const map = L.map("map").setView([20.5937, 78.9629], 5); // India center
    L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
      attribution: "&copy; OpenStreetMap contributors",
    }).addTo(map);

    const markers = L.markerClusterGroup();

    issues.forEach(issue => {
      const popupHtml = `
        <div class="popup-content">
          <h3>${issue.category}</h3>
          <p><b>User:</b> ${issue.username}</p>
          <p><b>Description:</b> ${issue.description}</p>
          <p><b>Status:</b> ${issue.status}</p>
          <div>
            ${issue.image ? `<img src="${issue.image}" alt="Before" />` : ""}
            ${issue.after_image ? `<img src="${issue.after_image}" alt="After" />` : ""}
          </div>
          <form action="/admin/update/${issue.id}" method="POST" enctype="multipart/form-data">
            <label>Status:</label>
            <select name="status" required>
              <option value="Pending" ${issue.status === "Pending" ? "selected" : ""}>Pending</option>
              <option value="Ongoing" ${issue.status === "Ongoing" ? "selected" : ""}>Ongoing</option>
              <option value="Completed" ${issue.status === "Completed" ? "selected" : ""}>Completed</option>
            </select>
            <label>Upload After Image (only if Completed):</label>
            <input type="file" name="after_image" accept="image/*" />
            <button type="submit">Update</button>
          </form>
        </div>
      `;

      const marker = L.marker([issue.latitude, issue.longitude]);
      marker.bindPopup(popupHtml);
      markers.addLayer(marker);
    });

    map.addLayer(markers);
  </script>
</body>
</html>
